<!-- app/views/reviews/_form.html.erb -->

<%= simple_form_for([@restaurant, @review], html: { class: 'mt-4' }) do |f| %>
  <div class="mb-3">
    <%= f.input :rating, class: 'form-control', placeholder: 'Rating (0-5)' %>
  </div>
  <div class="mb-3">
    <%= f.input :content, class: 'form-control', placeholder: 'Review Content' %>
  </div>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
